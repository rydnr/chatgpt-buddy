{
  "name": "chatgpt-buddy",
  "version": "2.0.0",
  "description": "Event-driven ChatGPT automation tool with browser extension and client SDKs",
  "scripts": {
    "build": "pnpm --filter='./packages/*' build",
    "test": "jest",
    "test:unit": "pnpm --filter='./packages/*' test",
    "test:integration": "jest tests/integration",
    "test:e2e": "npx playwright test",
    "test:e2e:server": "node scripts/start-e2e-server.js",
    "dev:server": "pnpm --filter='@chatgpt-buddy/server' dev",
    "lint": "pnpm --filter='./packages/*' lint",
    "typecheck": "pnpm --filter='./packages/*' typecheck",
    "extension:build": "cd extension && npm run build",
    "extension:install": "cd extension && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rydnr/chatgpt-buddy.git"
  },
  "keywords": [
    "chatgpt",
    "automation",
    "browser-extension",
    "typescript",
    "event-driven"
  ],
  "author": "rydnr",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/rydnr/chatgpt-buddy/issues"
  },
  "homepage": "https://github.com/rydnr/chatgpt-buddy#readme",
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@playwright/test": "^1.53.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.6.0",
    "jest": "^29.5.0",
    "playwright": "^1.53.1",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "ws": "^8.18.3"
  },
  "workspaces": [
    "packages/*",
    "typescript-eda",
    "web-buddy"
  ]
}
