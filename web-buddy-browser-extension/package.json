{
  "name": "@web-buddy/browser-extension",
  "version": "1.0.0",
  "description": "Browser extension framework for intelligent web automation with event-driven training system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:extension",
    "build:extension": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist build",
    "package": "npm run build && web-ext build --source-dir=dist",
    "start:firefox": "web-ext run --source-dir=dist --target=firefox-desktop",
    "start:chrome": "web-ext run --source-dir=dist --target=chromium"
  },
  "keywords": [
    "browser-extension",
    "web-automation",
    "training-system",
    "event-driven",
    "playwright",
    "dom-manipulation",
    "pattern-learning",
    "web-buddy",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "Web-Buddy Team",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rydnr/web-buddy-browser-extension.git"
  },
  "bugs": {
    "url": "https://github.com/rydnr/web-buddy-browser-extension/issues"
  },
  "homepage": "https://web-buddy.org/browser-extension",
  "dependencies": {
    "@typescript-eda/domain": "^1.0.0",
    "@typescript-eda/infrastructure": "^1.0.0",
    "@typescript-eda/application": "^1.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.245",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "web-ext": "^7.8.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "peerDependencies": {
    "@typescript-eda/domain": "^1.0.0",
    "@typescript-eda/infrastructure": "^1.0.0",
    "@typescript-eda/application": "^1.0.0"
  },
  "files": [
    "dist",
    "src",
    "manifest.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}